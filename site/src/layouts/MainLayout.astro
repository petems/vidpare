---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'VidPare â€” Native macOS Video Trimmer',
  description = 'Free and open source native macOS video trimmer built with SwiftUI and AVFoundation.'
} = Astro.props;
---

<!doctype html>
<html lang="en" class="theme-root">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#0a6cff" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://vidpare.app" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="canonical" href="https://vidpare.app/" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://github.com" />
  </head>
  <body>
    <slot />
  </body>
</html>
